<div class="col-5 mx-auto">
    <div class="container ">
      <form action="/auth/signin" method="POST">
        <div class="row">
          <div class="col-12">
            <label>Phone</label>
            <input
              type="text"
              class="form-control"
              name="phone"
              placeholder="0805****"
            />
          </div>
        </div>
        <div class="row mb-3">
          <div class="col-12">
            <label>Password</label>
            <input
              type="password"
              class="form-control"
              name="password"
              placeholder="*******"
            />
          </div>
        </div>
        <button class="btn btn-primary btn-block">Sign In</button>
      </form>
    </div>
  </div>